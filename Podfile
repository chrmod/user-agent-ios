platform :ios, '11.4'

project './Client.xcodeproj'

inhibit_all_warnings!

target 'Cliqz' do
  use_frameworks!
  pod 'SnapKit', '~> 5.0.0', :modular_headers => true
end

target 'Lumen' do
  use_frameworks!
  pod 'SnapKit', '~> 5.0.0', :modular_headers => true
end

target 'Ghostery' do
  use_frameworks!
  pod 'SnapKit', '~> 5.0.0', :modular_headers => true
end

target 'ShareTo' do
  use_frameworks!
  pod 'SnapKit', '~> 5.0.0', :modular_headers => true
end

target 'Shared' do
  use_frameworks!

  pod 'Sentry', :git => 'https://github.com/getsentry/sentry-cocoa.git', :tag => '4.3.1'
  pod 'SwiftLint'
end
